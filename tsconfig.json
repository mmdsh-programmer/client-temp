{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@styles/*": ["./styles/*"],
      "@assets/*": ["./assets/*"],
      "@themes/*": ["./themes/*"],
      "@utils/*": ["./utils/*"],
      "@atom/*": ["./atom/*"],
      "@hooks/*": ["./hooks/*"],
      "@components/*": ["./components/*"],
      "@interface/*": ["./interface/*"],
      "@service/*": ["./service/*"],
      "@actions/*": ["./actions/*"],
      "@app/*": ["./app/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
